{
  "name": "paiable-onepager",
  "version": "1.0.0",
  "private": true,
  "description": "Site one-pager pour Paiable - Automatisez vos factures. Accélérez vos paiements.",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
